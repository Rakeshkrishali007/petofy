<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Fragment">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/have_a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello,"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.105"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.051" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="Dr Rakesh"
            android:layout_marginTop="@dimen/_20sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.105"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.051" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_6sdp"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wave_icon" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/have_a"
        android:layout_height="wrap_content"
        android:text="Have a nice day at work"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/have_a">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="@dimen/_220sdp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_100sdp"
            app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
            app:boxCornerRadiusBottomStart="@dimen/_5sdp"
            app:boxCornerRadiusTopEnd="@dimen/_8sdp"
            app:boxCornerRadiusTopStart="@dimen/_8sdp"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_40sdp"
                android:drawableStart="@drawable/search_icon"
                android:drawablePadding="@dimen/_10sdp"
                android:hint="Search patient, pet etc"
                android:paddingTop="@dimen/_10sdp" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="1.0">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardBackgroundColor="#f6f6f6"
            app:cardCornerRadius="@dimen/_10sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:textColor="@color/black"
        android:textSize="@dimen/_13ssp"
        app:layout_goneMarginTop="@dimen/_5sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardElevation="@dimen/_3sdp"
                    android:fadingEdgeLength="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dog_image"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Pets"

                        android:textSize="@dimen/_15ssp"
                        android:layout_marginStart="@dimen/_90sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="#878384"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_180sdp"
                        android:layout_marginLeft="175dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_myPets"
                        android:text="0"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_20ssp"
                        android:layout_marginStart="@dimen/_200sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/forward_gray_icon"
                        android:layout_marginStart="@dimen/_250sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardElevation="@dimen/_3sdp"
                    android:fadingEdgeLength="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/online_appointment_icon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online \n Appointment"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginStart="@dimen/_90sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="#878384"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_180sdp"
                        android:layout_marginLeft="175dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_appointment"
                        android:text="0"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_20ssp"
                        android:layout_marginStart="@dimen/_200sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/forward_gray_icon"
                        android:layout_marginStart="@dimen/_250sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardElevation="@dimen/_3sdp"
                    android:fadingEdgeLength="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/nurse_icon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Staff"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginStart="@dimen/_90sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="#878384"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_180sdp"
                        android:layout_marginLeft="175dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_staff"
                        android:text="0"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_20ssp"
                        android:layout_marginStart="@dimen/_200sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/forward_gray_icon"
                        android:layout_marginStart="@dimen/_250sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardElevation="@dimen/_3sdp"
                    android:fadingEdgeLength="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/documemt"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_record"
                        android:layout_height="wrap_content"
                        android:text="Records"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginStart="@dimen/_90sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginStart="@dimen/_200sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/forward_gray_icon"
                        android:layout_marginStart="@dimen/_250sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardElevation="@dimen/_3sdp"
                    android:fadingEdgeLength="@dimen/_3sdp">

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/b2b_icon"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/txt_b2b"
                        android:layout_height="wrap_content"
                        android:text="B2B Services"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginStart="@dimen/_85sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginStart="@dimen/_200sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/forward_gray_icon"
                        android:layout_marginStart="@dimen/_250sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
