<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170sdp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="@dimen/_150sdp"
        android:elevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021">


            <LinearLayout
                android:layout_width="@dimen/_190sdp"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:src="@drawable/dog" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_25ssp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txt_dog_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rambo"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txt_dog_dataOfBirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="DOB- 08/06/2020"
                        android:textSize="@dimen/_10ssp"

                        />


                    <TextView
                        android:id="@+id/txt_dog_owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Pramod Rana"
                        android:textSize="@dimen/_10ssp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_99sdp"
                    android:layout_height="@dimen/_29sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    app:cardBackgroundColor="#fff3eb"
                    app:cardCornerRadius="@dimen/_5sdp">


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        app:cardBackgroundColor="#f96014"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:src="@drawable/camera_dog_icon" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/txt_petNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:maxLength="8"
                        android:text="PETO-5930"
                        android:textSize="12sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_110sdp">

            <Button
                android:layout_width="@dimen/_130sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:background="@drawable/round_corners"
                android:layout_height="@dimen/_30sdp"
                android:textSize="10sp"
                android:text="View details"
                android:layout_marginTop="@dimen/_2sdp" />


        </LinearLayout>



        <LinearLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_110sdp">

            <Button
                android:layout_width="@dimen/_130sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:background="@drawable/round_corners"
                android:layout_height="@dimen/_30sdp"
                android:textSize="10sp"
                android:text="View details"
                android:layout_marginTop="@dimen/_2sdp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>