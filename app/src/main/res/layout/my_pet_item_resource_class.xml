<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170sdp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="@dimen/_150sdp"
        android:elevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_75sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8ssp"
                        android:src="@drawable/dog" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_25ssp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txt_dog_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rambo"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txt_dog_dataOfBirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="DOB- 08/06/2020"
                        android:textSize="@dimen/_10ssp"

                        />


                    <TextView
                        android:id="@+id/txt_dog_owner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Pramod Rana"
                        android:textSize="@dimen/_10ssp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_99sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="@dimen/_25sdp"
                    app:cardBackgroundColor="#fff3eb"
                    app:cardCornerRadius="@dimen/_5sdp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <ImageView
                            android:id="@+id/pet_image"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:src="@drawable/pet_id_image"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/txt_petNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_gravity=" end | center_vertical"
                            android:maxLength="12"
                            android:text="PETO-5930"
                            android:textSize="@dimen/text_size_small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/pet_image"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_110sdp">

            <Button
                android:layout_width="@dimen/_130sdp"
                android:id="@+id/btn_viewPetDetails"
                android:layout_marginStart="@dimen/_12sdp"
                android:background="@drawable/tranparentbutton"
                android:layout_height="@dimen/_30sdp"
                android:textSize="10sp"
                android:textColor="#3366ff"
                android:text="View details"
                android:layout_marginTop="@dimen/_2sdp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_110sdp">
            <Button
                android:layout_width="@dimen/_130sdp"
                android:id="@+id/btn_addToClinicVisit"
                android:layout_marginStart="@dimen/_8sdp"
                android:background="@drawable/round_corners"
                android:layout_height="@dimen/_30sdp"
                android:textSize="10sp"
                android:text="Add to clinic visit"
                android:layout_marginTop="@dimen/_2sdp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>